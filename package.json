{
    "name": "llw",
    "description": "Custom theme for the Life Less Wasteful blog",
    "version": "1.0.0",
    "engines": {
        "ghost": ">=1.2.0"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg",
        "mobile": "assets/screenshot-mobile.jpg"
    },
    "author": {
        "name": "creachBuilt",
        "email": "zackcreach@gmail.com",
        "url": "https://zackcreach.com"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine"
        ]
    },
    "keywords": [
        "ghost",
        "theme"
    ],
    "scripts": {
        "dev": "concurrently \"npm run sync\" \"npm run nodemon\" \"npm run watch\" \"npm run sass\"",
        "sync": "browser-sync start --port 4444 --proxy http://localhost:2368 --files 'assets/**/*' --no-ghost-mode",
        "nodemon": "cd ../../.. && nodemon current/index.js --watch content/themes/llw --ext hbs",
        "watch": "webpack --watch --progress",
        "sass": "gulp watch",
        "start": "gulp"
    },
    "devDependencies": {
        "babel-core": "^6.26.0",
        "babel-loader": "^7.1.4",
        "browser-sync": "^2.18.13",
        "concurrently": "^3.5.1",
        "gscan": "^1.3.0",
        "gulp": "3.9.1",
        "gulp-autoprefixer": "^4.0.0",
        "gulp-nodemon": "^2.2.1",
        "gulp-sass": "^3.1.0",
        "gulp-zip": "4.0.0",
        "nodemon": "^1.14.11",
        "webpack": "^3.11.0"
    },
    "config": {
        "posts_per_page": 25
    },
    "dependencies": {
        "lodash": "^4.17.5",
        "superagent": "^3.8.2"
    }
}
